<h3>Books</h3>
<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <tb></tb>
            <tb>
            <%= link_to"show", book_path(book.id) %>
            <%= link_to"edit", edit_book_path(book.id) %>
            </tb>
        </tr>
        <% end %>
    </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book,  local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
  </br>
<% end %>